{
  "name": "absorption",
  "version": "1.0.0",
  "description": "Retrospective board",
  "author": "kut_arika <kut.arika.1114@gmail.com>",
  "contributors": [
    "hitochan777 <hitochan777@gmail.com> (https://github.com/hitochan777)"
  ],
  "private": true,
  "scripts": {
    "dev": "backpack dev",
    "build": "nuxt build && backpack build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "test": "npm run jest && npm run coverage",
    "jest": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.0-rc2.3",
    "@nuxtjs/axios": "^5.0.0",
    "@nuxtjs/bulma": "^1.2.0",
    "apollo-server-express": "^2.2.0",
    "buefy": "^0.7.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "graphql": "^14.0.2",
    "graphql-subscriptions": "^1.0.0",
    "lodash": "^4.17.11",
    "mockgoose": "^7.3.5",
    "mongoose": "^5.3.11",
    "node-sass": "^4.10.0",
    "nuxt": "^2.0.0",
    "nuxt-buefy": "^0.3.1",
    "sass-loader": "^7.1.0",
    "uuid": "^3.3.2",
    "vuedraggable": "^2.16.0",
    "whatwg-fetch": "2.0.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "backpack-core": "^0.8.2",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.11.0",
    "prettier": "1.14.3",
    "vue-jest": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^[@~]/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**",
      "!assets/**",
      "!static/**",
      "!build/**",
      "!coverage/**",
      "!**/*.config.js",
      "!.nuxt/**"
    ],
    "setupFiles": [
      "<rootDir>/node_modules/regenerator-runtime/runtime"
    ],
    "coverageReporters": [
      "html"
    ]
  }
}
